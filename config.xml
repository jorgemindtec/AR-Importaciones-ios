	<feature name="http://api.phonegap.com/1.0/network" />
	<access origin="*" onlyInBrowser="true" />
	
	<icon src="img/icon.png" />
    
	<platform name="ios">
		<preference name="orientation" value="portrait" />
	  <icon src="img/icon-40.png"            gap:platform="ios"        width="40" height="40" />	
	  <icon src="img/icon-50.png"            gap:platform="ios"        width="50" height="50" />
	  <icon src="img/icon-57.png"            gap:platform="ios"        width="57" height="57" />  
	  <icon src="img/icon-60.png"            gap:platform="ios"        width="60" height="60" />  
	  <icon src="img/icon-72.png"            gap:platform="ios"        width="72" height="72" />
	  <icon src="img/icon-76.png"            gap:platform="ios"        width="76" height="76" />
	  <icon src="img/icon-512.png"           gap:platform="ios"        width="512" height="512" />
	  <icon src="img/icon-40-2x.png"         gap:platform="ios"        width="80" height="80" />
	  <icon src="img/icon-50-2x.png"         gap:platform="ios"        width="100" height="100" />
	  <icon src="img/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
	  <icon src="img/icon-60-2x.png"         gap:platform="ios"        width="120" height="120" />
	  <icon src="img/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />
	  <icon src="img/icon-76-2x.png"         gap:platform="ios"        width="152" height="152" />
	  <icon src="img/icon-512-2x.png"        gap:platform="ios"        width="1024" height="1024" />
    </platform>
	
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
	<access origin="whatsapp:*" launch-external="yes" />
	
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>	
</widget>
