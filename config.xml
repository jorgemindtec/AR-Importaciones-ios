<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="ar.importaciones" version="1.0.5" >
    <name>AR Import</name>
    <description>Tus Importaciones Seguras.</description>
    <author href="http://mindtec.com.mx/" email="contacto@mindtec.com.mx">Mindtec Software Revolution</author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="phonegap-version" value="cli-7.0.1" />
	
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
	
	<plugin name="cordova-plugin-camera"> 
		<param name="CAMERA_USAGE_DESCRIPTION" value="Se requiere el permiso de la camara para tomar fotografias de los productos a importar." /> 
		<param name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Se utilizara la libreria multimedia para seleccionar las fotografias de los productos a importar." /> 
        <!--<config-file target="*-Info.plist" parent="NSCameraUsageDescription">
            <string>$CAMERA_USAGE_DESCRIPTION</string>
        </config-file>-->
	</plugin>
	
	<feature name="http://api.phonegap.com/1.0/network" />
	<access origin="*" onlyInBrowser="true" />
	
	<preference name="orientation" value="portrait" />
	<!--<platform name="ios">-->
	  <icon src="img/icon.png" />    
	  <icon src="img/icon-40.png"            gap:platform="ios"        width="40" height="40" />	
	  <icon src="img/icon-50.png"            gap:platform="ios"        width="50" height="50" />
	  <icon src="img/icon-57.png"            gap:platform="ios"        width="57" height="57" />  
	  <icon src="img/icon-60.png"            gap:platform="ios"        width="60" height="60" />  
	  <icon src="img/icon-72.png"            gap:platform="ios"        width="72" height="72" />
	  <icon src="img/icon-76.png"            gap:platform="ios"        width="76" height="76" />
	  <icon src="img/icon-512.png"           gap:platform="ios"        width="512" height="512" />
	  <icon src="img/icon-40-2x.png"         gap:platform="ios"        width="80" height="80" />
	  <icon src="img/icon-50-2x.png"         gap:platform="ios"        width="100" height="100" />
	  <icon src="img/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
	  <icon src="img/icon-60-2x.png"         gap:platform="ios"        width="120" height="120" />
	  <icon src="img/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />
	  <icon src="img/icon-76-2x.png"         gap:platform="ios"        width="152" height="152" />
	  <icon src="img/icon-512-2x.png"        gap:platform="ios"        width="1024" height="1024" />
    <!--</platform>-->
	
    <allow-navigation href="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
	<access origin="whatsapp:*" launch-external="yes" />
	
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>	
</widget>
